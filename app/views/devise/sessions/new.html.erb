<header class='new-page-header'>
  <div class='new-page-content'>
    <%= link_to image_tag("blank.png", class:"blank-icon"), "/" %>
  </div>
    <div class='nav'>
    <ul class='lists-right'>
      <li><%= link_to '新規登録はこちらから', new_user_registration_path, class: "login" %></li>
    </ul>
  </div>
</header>
<%= form_with model: resource, as: resource_name, url: session_path(resource_name), class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      ログイン
    </h1>
  </div>
  <div class='login-flash-message'>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"" %>
  </div>
  <div class='login-btn'>
    <%= f.submit "ログイン" ,class:"login-red-btn" %>
  </div>
</div>
<% end %>

<%= render "shared/footer" %>

<%#= render "devise/shared/links" %>
